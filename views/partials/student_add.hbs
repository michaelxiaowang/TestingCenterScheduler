<div id="text">Please select a course and time:</div>
<div id="content">
	<form action="{{action}}" method="post">
	<table id="form">
		<tr>
			<td class="left">Exam:</td>
			<td class="right">
				<select name="exam">
					{{#each exams}}
						<option value="{{value}}">{{name}}</option>
					{{/each}}
				</select>
			</td>
		</tr>
		<tr>
			<td class="left">Time:</td>
			<td class="right">
				<select name="month">
					<option value="1">January</option>
					<option value="2">February</option>
					<option value="3">March</option>
					<option value="4">April</option>
					<option value="5">May</option>
					<option value="6">June</option>
					<option value="7">July</option>
					<option value="8">August</option>
					<option value="9">September</option>
					<option value="10">October</option>
					<option value="11">November</option>
					<option value="12">December</option>
				</select>
				<input type="number" name="day" value="1" min="1" max="31">
			</td>
		</tr>
		<tr>
			<td class="left"></td>
			<td class="right">at 
				<input type="number" name="hour" value="12" min="1" max="12">
				<input type="number" name="minute" value="0" min="0" max="59">
				<select name="ampm">
					<option value="am">AM</option>
					<option value="pm">PM</option>
				</select>
			</td>
		</tr>
		<tr>
			<td class="left"></td>
			<td class="action">
				<input type="submit" value="Submit">
			</td>
		</tr>
	</table>
	</form>
</div>